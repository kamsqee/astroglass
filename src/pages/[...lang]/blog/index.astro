---
import { getEnabledLocaleCodes, defaultLocale } from '../../../config/locales';
import { hasFeature } from '../../../config/config-loader';

export async function getStaticPaths() {
  if (!hasFeature('blog')) return [];

  return getEnabledLocaleCodes().map(lang => ({
    params: { lang: lang === defaultLocale ? undefined : lang },
    props: { locale: lang }
  }));
}

import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import BlogHero from '../../../components/blog/BlogHero.astro';
import BlogCard from '../../../components/blog/BlogCard.astro';
import TagFilter from '../../../components/blog/TagFilter.astro';
import NewsletterCTA from '../../../components/blog/NewsletterCTA.astro';
import FooterIndex from '../../../components/sections/footer/FooterIndex.astro';
import { useTranslations } from '../../../utils/i18n';

const { locale } = Astro.props;
const t = useTranslations(locale);

const posts = await getCollection('blog', ({ slug, data }) => {
  return slug.startsWith(`${locale}/`) && !data.draft;
});
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Featured post: first featured post, or fall back to most recent
const featuredPost = sortedPosts.find(p => p.data.featured) || sortedPosts[0];
const gridPosts = sortedPosts.filter(p => p !== featuredPost);

// Collect all unique tags
const allTags = [...new Set(sortedPosts.flatMap(p => p.data.tags))].sort();
---

<BaseLayout title={t('blog.title')} description={t('blog.description')}>
  <main class="blog-index">
    {/* Page header */}
    <header class="blog-index__header">
      <div class="blog-index__eyebrow">
        <span class="blog-index__eyebrow-dot"></span>
        <span>{t('blog.title')}</span>
      </div>
      <h1 class="blog-index__title">{t('blog.title')}</h1>
      <p class="blog-index__subtitle">{t('blog.subtitle')}</p>
    </header>

    {/* Featured post hero */}
    {featuredPost && (
      <section class="blog-index__hero" aria-label={t('blog.featuredBadge')}>
        <BlogHero post={featuredPost} />
      </section>
    )}

    {/* Tag filter */}
    {allTags.length > 0 && (
      <section class="blog-index__filter">
        <TagFilter tags={allTags} />
      </section>
    )}

    {/* Post grid */}
    <section class="blog-index__grid-section">
      {gridPosts.length > 0 && (
        <div class="blog-index__grid">
          {gridPosts.map(post => <BlogCard post={post} />)}
        </div>
      )}
      {gridPosts.length === 0 && sortedPosts.length <= 1 && (
        <p class="blog-index__empty">{t('blog.noPosts')}</p>
      )}
    </section>

    {/* Newsletter CTA */}
    <section class="blog-index__newsletter">
      <NewsletterCTA />
    </section>
  </main>
  <FooterIndex />
</BaseLayout>

<style>
  .blog-index {
    max-width: 72rem;
    margin: 0 auto;
    padding: calc(var(--nav-offset, 5rem) + 2rem) 1.5rem 3rem;
    overflow-x: hidden;
  }

  .blog-index__header {
    margin-bottom: 3rem;
  }

  .blog-index__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.6875rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: hsl(var(--a));
    margin-bottom: 1rem;
  }

  .blog-index__eyebrow-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: hsl(var(--a));
    animation: blog-dot-pulse 2s ease-in-out infinite;
  }

  @keyframes blog-dot-pulse {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.3); }
  }

  .blog-index__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    line-height: 1.05;
    letter-spacing: -0.03em;
    color: hsl(var(--bc));
    margin-bottom: 0.75rem;
  }

  .blog-index__subtitle {
    font-size: 1.125rem;
    line-height: 1.6;
    color: hsl(var(--bc) / 0.5);
    max-width: 42ch;
  }

  .blog-index__hero {
    margin-bottom: 2.5rem;
  }

  .blog-index__filter {
    margin-bottom: 2rem;
  }

  .blog-index__grid-section {
    margin-bottom: 2rem;
  }

  .blog-index__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .blog-index__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .blog-index__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.75rem;
    }
  }

  .blog-index__empty {
    text-align: center;
    padding: 4rem 2rem;
    color: hsl(var(--bc) / 0.4);
    font-size: 1rem;
  }

  .blog-index__newsletter {
    margin-top: 4rem;
    max-width: 40rem;
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 768px) {
    .blog-index {
      padding: calc(var(--nav-offset, 5rem) + 2.5rem) 2rem 4rem;
    }
  }
</style>
