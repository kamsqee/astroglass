---
/**
 * Features Home â€” Developer benefits with two-column layout
 * Left: headline + description. Right: stacked feature cards.
 */
import '../../../styles/components/features/FeaturesNeo.css';
import { useTranslations } from '../../../utils/i18n';
import { getLocaleFromUrl } from '../../../utils/locale-utils';
import LocalizedLink from '../../ui/LocalizedLink.astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const features = [
  { icon: 'ðŸš€', id: 1 },
  { icon: 'ðŸŒ€', id: 2 },
  { icon: 'âš¡', id: 3 },
  { icon: 'ðŸ”', id: 4 },
  { icon: 'ðŸŒ', id: 5 },
  { icon: 'âš›ï¸', id: 6 },
  { icon: 'ðŸ›¡ï¸', id: 7 },
  { icon: 'ðŸŽ¯', id: 8 },
].map((item, index) => ({
  ...item,
  title: t(`features.home.list.${index}.title`),
  desc: t(`features.home.list.${index}.desc`),
}));

const leftFeatures = features.slice(0, 4);
const rightFeatures = features.slice(4);
---

<section id="features" class="relative py-16 sm:py-24 md:py-32 px-4 sm:px-6 bg-base-100 overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-12 sm:mb-16 md:mb-20 border-b border-base-content/5 pb-8 sm:pb-12">
      <div class="max-w-2xl">
        <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-accent/20 bg-accent/[0.06] text-base-content/80 text-[10px] font-bold uppercase tracking-[0.3em] mb-4">
          <span class="w-1.5 h-1.5 rounded-full bg-accent animate-pulse"></span>
          {t('features.home.title')}
        </div>
        <h2 class="text-5xl sm:text-6xl md:text-8xl font-black text-base-content tracking-tighter leading-[0.9]">
          {t('features.home.subtitle')}
        </h2>
      </div>
      <div class="flex flex-col sm:flex-row items-start sm:items-end gap-4 sm:gap-6">
        <p class="text-base sm:text-lg text-base-content/75 font-medium max-w-xs">
          {t('features.home.desc')}
        </p>
        <LocalizedLink href="/docs" class="group flex items-center gap-3 px-5 py-3 rounded-full border border-base-content/10 hover:border-accent/30 hover:bg-accent/5 transition-all duration-300">
          <span class="text-sm font-bold text-base-content/75 group-hover:text-accent transition-colors duration-300">{t('features.cta')}</span>
          <svg class="w-5 h-5 text-base-content/75 group-hover:text-accent group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </LocalizedLink>
      </div>
    </div>

    <!-- Two-column feature layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-3 sm:gap-4">
      <!-- Left column -->
      <div class="flex flex-col gap-3 sm:gap-4">
        {leftFeatures.map((f, i) => (
          <div
            class="features-home-card group relative rounded-2xl sm:rounded-3xl overflow-hidden bg-base-content/[0.02] border border-base-content/5 hover:bg-base-content/[0.04] transition-all duration-700"
            style={`animation-delay: ${i * 100}ms`}
          >
            <div class="relative p-6 sm:p-8 flex items-start gap-5">
              {/* Gradient overlay on hover */}
              <div class="absolute inset-0 bg-gradient-to-r from-accent/8 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
              
              {/* Icon */}
              <div class="relative z-10 text-2xl sm:text-3xl flex-shrink-0 transform group-hover:scale-110 group-hover:rotate-6 transition-transform duration-500">
                {f.icon}
              </div>

              {/* Content */}
              <div class="relative z-10 flex-1 min-w-0">
                <div class="flex items-center gap-3 mb-2">
                  <span data-content={`0${i + 1}`} class="feature-value text-xs font-black tracking-widest text-accent/70 group-hover:text-accent/80"></span>
                  <h3 class="text-lg sm:text-xl font-black text-base-content group-hover:text-accent tracking-tight transition-colors duration-500">
                    {f.title}
                  </h3>
                </div>
                <p class="text-sm text-base-content/75 group-hover:text-base-content/75 leading-relaxed transition-colors duration-500">
                  {f.desc}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Right column -->
      <div class="flex flex-col gap-3 sm:gap-4">
        {rightFeatures.map((f, i) => (
          <div
            class="features-home-card group relative rounded-2xl sm:rounded-3xl overflow-hidden bg-base-content/[0.02] border border-base-content/5 hover:bg-base-content/[0.04] transition-all duration-700"
            style={`animation-delay: ${(i + 4) * 100}ms`}
          >
            <div class="relative p-6 sm:p-8 flex items-start gap-5">
              <div class="absolute inset-0 bg-gradient-to-r from-accent/8 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
              
              <div class="relative z-10 text-2xl sm:text-3xl flex-shrink-0 transform group-hover:scale-110 group-hover:rotate-6 transition-transform duration-500">
                {f.icon}
              </div>

              <div class="relative z-10 flex-1 min-w-0">
                <div class="flex items-center gap-3 mb-2">
                  <span data-content={`0${i + 5}`} class="feature-value text-xs font-black tracking-widest text-accent/70 group-hover:text-accent/80"></span>
                  <h3 class="text-lg sm:text-xl font-black text-base-content group-hover:text-accent tracking-tight transition-colors duration-500">
                    {f.title}
                  </h3>
                </div>
                <p class="text-sm text-base-content/75 group-hover:text-base-content/75 leading-relaxed transition-colors duration-500">
                  {f.desc}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .features-home-card {
    --card-hover-border: hsl(var(--a) / 0.15);
    opacity: 0;
    animation: feature-card-in 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  :global([data-palette="monochrome"]) .features-home-card {
    --card-hover-border: hsl(var(--bc) / 0.2);
  }

  .features-home-card:hover {
    transform: translateX(4px);
    border-color: var(--card-hover-border);
  }

  @keyframes feature-card-in {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .feature-value::before {
    content: attr(data-content);
  }
</style>
