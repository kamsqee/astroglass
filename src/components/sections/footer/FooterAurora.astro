---
/**
 * Footer Aurora - Aurora Minimal Footer
 * Clean footer with link columns, gradient logo, and social links.
 */
import { getLocaleFromUrl, useTranslations } from '../../../utils/i18n';
import LocalizedLink from '../../ui/LocalizedLink.astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
import '../../../styles/components/footer/FooterAurora.css';
import { hasFeature } from '../../../config/config-loader';
---

<footer class="footer-aurora">
  <div class="footer-aurora-inner">
    <!-- Top: Logo + link columns -->
    <div class="footer-aurora-top">
      <!-- Logo -->
      <div class="footer-aurora-brand">
        <LocalizedLink href="/" class="footer-aurora-logo">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="footer-aurora-logo-icon">
            <path d="M12 2.5C12 2.5 4 10 4 14.5C4 18.92 7.58 22.5 12 22.5C16.42 22.5 20 18.92 20 14.5C20 10 12 2.5 12 2.5Z"/>
            <path d="M8.5 14L12 8L15.5 14L12 18Z"/>
          </svg>
          <span>{t('footer.company')}</span>
        </LocalizedLink>
        <p class="footer-aurora-tagline">{t('footer.tagline')}</p>
      </div>

      <!-- Link columns -->
      <div class="footer-aurora-links">
        <div class="footer-aurora-col">
          <h3>{t('footer.links.product')}</h3>
          <LocalizedLink href="#features">{t('footer.links.features')}</LocalizedLink>
          <LocalizedLink href="#pricing">{t('footer.links.pricing')}</LocalizedLink>
          <LocalizedLink href="#portfolio">{t('footer.links.demos')}</LocalizedLink>
        </div>
        <div class="footer-aurora-col">
          <h3>{t('footer.links.company')}</h3>
          <LocalizedLink href="#about">{t('footer.links.about')}</LocalizedLink>
          <LocalizedLink href="#contact">{t('footer.links.contact')}</LocalizedLink>
          <LocalizedLink href="/privacy">{t('footer.links.privacy')}</LocalizedLink>
          <LocalizedLink href="/terms">{t('footer.links.terms')}</LocalizedLink>
        </div>
        <div class="footer-aurora-col">
          <h3>{t('footer.links.resources')}</h3>
          {hasFeature('docs') && (<LocalizedLink href="/docs">{t('footer.links.docs')}</LocalizedLink>)}
          <LocalizedLink href="#faq">{t('footer.links.faq')}</LocalizedLink>
          <LocalizedLink href="#contact">{t('footer.links.support')}</LocalizedLink>
        </div>
      </div>
    </div>

    <!-- Bottom: copyright + socials -->
    <div class="footer-aurora-bottom">
      <span class="footer-aurora-copyright">{t('footer.copyright')}. {t('footer.allRightsReserved')}.</span>
      <div class="footer-aurora-socials">
        <a href="https://github.com/kamsqee/astroglass" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="footer-aurora-social">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
        </a>
        <a href="https://twitter.com/kamsqee" target="_blank" rel="noopener noreferrer" aria-label="Twitter" class="footer-aurora-social">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
