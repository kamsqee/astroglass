---
/**
 * Footer Minimal â€” The Masthead (Premium Editorial)
 * 
 * Inspired by high-end magazine mastheads and art publication footers.
 * Features an oversized brand wordmark, editorial link grid with 
 * numbering, animated accent rules, and a cinematic bottom bar.
 */
import { useTranslations } from '../../../utils/i18n';
import { getLocaleFromUrl } from '../../../utils/locale-utils';
import LocalizedLink from '../../ui/LocalizedLink.astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const currentYear = new Date().getFullYear();

import '../../../styles/components/footer/FooterMinimal.css';
import '../../../styles/components/tag/TagMinimal.css';
import { hasFeature } from '../../../config/config-loader';
---

<footer class="footer-minimal relative pt-20 lg:pt-28 pb-8 lg:pb-12 px-4 sm:px-6 bg-base-100 overflow-hidden">
  
  <!-- Top accent rule -->
  <div class="footer-minimal__rule-accent max-w-5xl mx-auto mb-16 lg:mb-20">
    <div class="h-px bg-gradient-to-r from-transparent via-accent/30 to-transparent"></div>
  </div>

  <div class="max-w-5xl mx-auto relative">

    <!-- Large editorial wordmark -->
    <div class="footer-minimal__wordmark text-center mb-12 lg:mb-16">
      <LocalizedLink href="/" class="inline-block group" aria-label={t('footer.company')}>
        <svg class="h-16 sm:h-20 lg:h-24 w-auto min-w-[280px]" viewBox="0 0 400 100" preserveAspectRatio="xMidYMid meet" aria-hidden="true">
          <text x="50%" y="54%" dominant-baseline="middle" text-anchor="middle" font-size="80" font-weight="900" fill="currentColor" class="text-base-content/[0.06] tracking-tighter group-hover:text-base-content/[0.10] transition-colors duration-700">
            {t('footer.company')}
          </text>
        </svg>
      </LocalizedLink>
      <p class="text-xs sm:text-sm text-base-content/80 mt-3 tracking-wide">
        {t('footer.tagline')}
      </p>
    </div>

    <!-- Editorial link grid with numbering -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 sm:gap-6 lg:gap-10 mb-14 lg:mb-20">
      
      <!-- Product -->
      <div class="footer-minimal__col group">
        <div class="flex items-center gap-3 mb-4 sm:mb-5">
          <svg class="h-8 sm:h-10 w-12" viewBox="0 0 40 40" aria-hidden="true">
            <text x="0" y="32" font-size="32" font-weight="900" fill="currentColor" class="text-base-content/[0.04] group-hover:text-accent/10 transition-colors duration-500">01</text>
          </svg>
          <span class="c-tag-minimal text-accent/70"><span class="c-tag-minimal__dash"></span>{t('footer.links.product')}</span>
        </div>
        <ul class="space-y-2.5 sm:space-y-3 pl-0 sm:pl-1">
          <li><LocalizedLink href="#features" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.features')}</LocalizedLink></li>
          <li><LocalizedLink href="#pricing" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.pricing')}</LocalizedLink></li>
          <li><LocalizedLink href="/minimal" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.demos')}</LocalizedLink></li>
        </ul>
      </div>

      <!-- Company -->
      <div class="footer-minimal__col group">
        <div class="flex items-center gap-3 mb-4 sm:mb-5">
          <svg class="h-8 sm:h-10 w-12" viewBox="0 0 40 40" aria-hidden="true">
            <text x="0" y="32" font-size="32" font-weight="900" fill="currentColor" class="text-base-content/[0.04] group-hover:text-accent/10 transition-colors duration-500">02</text>
          </svg>
          <span class="c-tag-minimal text-accent/70"><span class="c-tag-minimal__dash"></span>{t('footer.links.company')}</span>
        </div>
        <ul class="space-y-2.5 sm:space-y-3 pl-0 sm:pl-1">
          <li><LocalizedLink href="#about" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.about')}</LocalizedLink></li>
          {hasFeature('blog') && (<li><LocalizedLink href="/blog" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.blog')}</LocalizedLink></li>)}
          <li><LocalizedLink href="#contact" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.contact')}</LocalizedLink></li>
          <li><LocalizedLink href="/privacy" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.privacy')}</LocalizedLink></li>
          <li><LocalizedLink href="/terms" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.terms')}</LocalizedLink></li>
        </ul>
      </div>

      <!-- Resources -->
      <div class="footer-minimal__col group">
        <div class="flex items-center gap-3 mb-4 sm:mb-5">
          <svg class="h-8 sm:h-10 w-12" viewBox="0 0 40 40" aria-hidden="true">
            <text x="0" y="32" font-size="32" font-weight="900" fill="currentColor" class="text-base-content/[0.04] group-hover:text-accent/10 transition-colors duration-500">03</text>
          </svg>
          <span class="c-tag-minimal text-accent/70"><span class="c-tag-minimal__dash"></span>{t('footer.links.resources')}</span>
        </div>
        <ul class="space-y-2.5 sm:space-y-3 pl-0 sm:pl-1">
          {hasFeature('docs') && (<li><LocalizedLink href="/docs" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.docs')}</LocalizedLink></li>)}
          <li><LocalizedLink href="#faq" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.faq')}</LocalizedLink></li>
          <li><LocalizedLink href="#contact" class="footer-minimal__link text-sm text-base-content/75 flex items-center gap-2"><span class="w-3 h-px bg-base-content/10 group-hover:bg-accent/30 group-hover:w-5 transition-all duration-300"></span>{t('footer.links.support')}</LocalizedLink></li>
        </ul>
      </div>
    </div>

    <!-- Social & bottom section -->
    <div class="border-t border-base-content/5 pt-8 lg:pt-10">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-6">
        
        <!-- Copyright colophon -->
        <div class="text-center sm:text-left order-2 sm:order-1">
          <p class="text-[10px] text-base-content/75 uppercase tracking-[0.2em]">
            {t('footer.copyright')}
          </p>

        </div>

        <!-- Social icons -->
        <div class="flex items-center gap-2 order-1 sm:order-2">
          <a href="https://github.com/kamsqee/astroglass" target="_blank" rel="noopener noreferrer" class="footer-minimal__social w-10 h-10 rounded-full flex items-center justify-center text-base-content/25 border border-base-content/5" aria-label={t('footer.social.github')}>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          </a>
          <a href="https://twitter.com/kamsqee" target="_blank" rel="noopener noreferrer" class="footer-minimal__social w-10 h-10 rounded-full flex items-center justify-center text-base-content/25 border border-base-content/5" aria-label={t('footer.social.twitter')}>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a href="https://discord.gg/astroglass" target="_blank" rel="noopener noreferrer" class="footer-minimal__social w-10 h-10 rounded-full flex items-center justify-center text-base-content/25 border border-base-content/5" aria-label={t('footer.social.discord')}>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189z"/></svg>
          </a>
        </div>

        <!-- Year marker -->
        <div class="hidden lg:block order-3">
          <svg class="h-12 w-32" viewBox="0 0 120 50" aria-hidden="true">
            <text x="100%" y="42" text-anchor="end" font-size="48" font-weight="900" fill="currentColor" class="text-base-content/[0.04] tracking-tighter">{currentYear}</text>
          </svg>
        </div>
      </div>
    </div>
  </div>
</footer>
