---
/**
 * CTA Aurora - Aurora Gradient Banner
 * Full-width gradient banner CTA with geometric accents and dual buttons.
 */
import { getLocaleFromUrl, useTranslations } from '../../../utils/i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
import '../../../styles/components/cta/CTAAurora.css';
---

<section class="cta-aurora" id="cta">
  <div class="cta-aurora-bg">
    <div class="cta-aurora-mesh"></div>
    <div class="cta-aurora-mesh cta-aurora-mesh--2"></div>
    <div class="cta-aurora-grid-overlay"></div>
  </div>

  <div class="cta-aurora-content">
    <span class="cta-aurora-eyebrow">{t('cta.eyebrow')}</span>
    <h2 class="cta-aurora-title">{t('cta.title')}</h2>
    <p class="cta-aurora-subtitle">{t('cta.subtitle')}</p>

    <div class="cta-aurora-buttons">
      <a href="#contact" class="cta-aurora-btn cta-aurora-btn--primary">
        <span class="cta-aurora-btn-glow"></span>
        <span class="cta-aurora-btn-text">{t('cta.primary')}</span>
      </a>
      <a href={`/${locale}/docs`} class="cta-aurora-btn cta-aurora-btn--secondary">
        <span class="cta-aurora-btn-text">{t('cta.secondary')}</span>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="cta-aurora-btn-arrow">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    <div class="cta-aurora-proof">
      <span class="cta-aurora-proof-check">✓</span>
      <span>{t('cta.noCreditCard')}</span>
      <span class="cta-aurora-proof-dot">·</span>
      <span>{t('cta.trialDays')}</span>
      <span class="cta-aurora-proof-dot">·</span>
      <span>{t('cta.cancelAnytime')}</span>
    </div>
  </div>
</section>
