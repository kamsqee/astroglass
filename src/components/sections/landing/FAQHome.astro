---
/**
 * FAQ Home â€” Lightweight FAQ for the index page
 * 5 template-specific questions with accordion interaction
 */
import '../../../styles/components/landing/FAQHome.css';
import { getLocaleFromUrl, useTranslations } from '../../../utils/i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const faqs = [
  { key: 'free' },
  { key: 'commercial' },
  { key: 'switch' },
  { key: 'react' },
  { key: 'deploy' },
];
---

<section id="faq-home" class="relative py-16 sm:py-24 md:py-32 px-4 sm:px-6 bg-base-100 overflow-hidden">
  <div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-10 sm:mb-14">
      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-accent/20 bg-accent/[0.06] text-base-content/80 text-[10px] font-bold uppercase tracking-[0.3em] mb-4">
        <span class="w-1.5 h-1.5 rounded-full bg-accent animate-pulse"></span>
        {t('landing.faq.eyebrow')}
      </div>
      <h2 class="text-4xl sm:text-5xl md:text-7xl font-black text-base-content tracking-tighter leading-[0.95] mb-6">
        {t('landing.faq.title')}
      </h2>
    </div>

    <!-- Questions -->
    <div class="space-y-3" id="faq-home-list">
      {faqs.map((faq, i) => (
        <div
          class="faq-home-item group rounded-2xl border border-base-content/5 overflow-hidden transition-all duration-500"
          style={`animation-delay: ${i * 80}ms`}
        >
          <button
            class="faq-home-trigger w-full flex items-center justify-between p-5 sm:p-6 text-left"
            aria-expanded="false"
          >
            <span class="text-sm sm:text-base font-bold text-base-content pr-4 group-hover:text-accent transition-colors duration-300">
              {t(`landing.faq.${faq.key}Q`)}
            </span>
            <svg class="faq-home-chevron w-4 h-4 text-base-content/80 flex-shrink-0 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="faq-home-answer hidden px-5 sm:px-6 pb-5 sm:pb-6">
            <p class="text-sm text-base-content/75 leading-relaxed">
              {t(`landing.faq.${faq.key}A`)}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>




<script>
  let faqHomeController: AbortController | null = null;

  function initFAQHome() {
    faqHomeController?.abort();
    faqHomeController = new AbortController();
    const signal = faqHomeController.signal;

    document.querySelectorAll('.faq-home-trigger').forEach(btn => {
      btn.addEventListener('click', () => {
        const item = btn.closest('.faq-home-item');
        const answer = item?.querySelector('.faq-home-answer');
        const isOpen = item?.classList.contains('open');

        // Close all
        document.querySelectorAll('.faq-home-item').forEach(i => {
          if (i !== item) {
            i.classList.remove('open');
            i.querySelector('.faq-home-answer')?.classList.add('hidden');
            i.querySelector('.faq-home-trigger')?.setAttribute('aria-expanded', 'false');
          }
        });

        // Toggle this
        item?.classList.toggle('open', !isOpen);
        answer?.classList.toggle('hidden', isOpen);
        btn.setAttribute('aria-expanded', String(!isOpen));
      }, { signal });
    });
  }

  initFAQHome();
  document.addEventListener('astro:after-swap', initFAQHome);
</script>
