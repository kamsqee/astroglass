---
/**
 * Hero Neo - Minimalist Editorial (Refined)
 * Elegant, large typography with heavy focus on white space.
 * Better mobile scaling and CTA visibility.
 */
import { useTranslations } from '../../../utils/i18n';
import { getLocaleFromUrl } from '../../../utils/locale-utils';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const words = t('hero.title').split(' ');
import '../../../styles/components/hero/HeroNeo.css';
import NeoSectionTag from '../../ui/neo/NeoSectionTag.astro';
---

<section class="relative min-h-screen flex items-center justify-center text-center px-4 pt-[calc(100px+var(--nav-offset))] pb-24 overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
     <!-- Massive Background Glow -->
     <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] md:w-[900px] h-[600px] md:h-[900px] bg-[hsl(var(--glow-color))] opacity-[var(--glow-intensity,0.08)] blur-[200px] rounded-full animate-pulse-slow"></div>
  </div>

  <div class="relative z-10 w-full max-w-5xl">
    <!-- Badge -->
    <div class="animate-fade-in opacity-0" style="animation-fill-mode: forwards;">
      <NeoSectionTag label={t('hero.visionary')} class="c-hero-neo__visionary-badge mb-8 md:mb-12 sm:text-[11px] sm:tracking-[0.5em]" />
    </div>

    <!-- Headline with responsive scaling -->
    <h1 class="text-4xl sm:text-6xl md:text-8xl xl:text-[10rem] font-black tracking-tighter text-base-content mb-10 md:mb-16 animate-reveal leading-[1.1] md:leading-none">
      {words.map((word, i) => (
        <span 
          class={`c-hero-neo__title-word inline-block ${i === 1 ? 'font-black italic text-accent' : ''}`}
          style={`animation-delay: ${i * 0.1}s`}
        >{word}&nbsp;</span>
      ))}
    </h1>

    <!-- Decorative line -->
    <div class="w-24 md:w-32 h-px bg-gradient-to-r from-transparent via-accent to-transparent mx-auto mb-10 md:mb-16 animate-width-grow"></div>

    <!-- Subtitle - direct statement, no quotes -->
    <p class="c-hero-neo__subtitle text-lg sm:text-xl md:text-2xl text-base-content/75 max-w-xl md:max-w-2xl mx-auto mb-12 md:mb-20 font-light leading-relaxed animate-fade-in opacity-0" style="animation-delay: 0.5s; animation-fill-mode: forwards;">
      {t('hero.subtitle')}
    </p>

    <!-- CTA with better visibility -->
    <div class="flex flex-col items-center gap-8 md:gap-12 animate-fade-in opacity-0" style="animation-delay: 0.8s; animation-fill-mode: forwards;">
        <a href="#services" class="c-hero-neo__btn-minimal group relative py-4 md:py-5 px-10 md:px-14 border border-base-content/10 bg-base-content/[0.02] hover:bg-accent/10 hover:border-accent/30 rounded-full backdrop-blur-sm transition-all duration-700">
            <span class="c-hero-neo__btn-text text-sm font-black tracking-[0.3em] md:tracking-[0.4em] uppercase text-base-content group-hover:text-accent transition-colors duration-500 flex items-center gap-3">
              {t('hero.cta')}
              <svg class="w-4 h-4 opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </span>
        </a>
        
        <!-- Scroll indicator -->
        <a href="#about" class="flex flex-col items-center gap-3 text-base-content/80 hover:text-base-content/75 transition-colors">
          <span class="text-[10px] uppercase tracking-widest">{t('hero.scrollToExplore')}</span>
          <svg class="w-5 h-5 animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </a>
    </div>
  </div>

  <!-- Simplified particles (2 on mobile, 4 on desktop) -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="c-hero-neo__particle c-hero-neo__particle--1"></div>
    <div class="c-hero-neo__particle c-hero-neo__particle--2"></div>
    <div class="c-hero-neo__particle c-hero-neo__particle--3 hidden md:block"></div>
    <div class="c-hero-neo__particle c-hero-neo__particle--4 hidden md:block"></div>
  </div>
</section>
