---
/**
 * Luxury Portfolio — Bottom CTA
 * CTA with diamond divider and luxury button components.
 */
import LuxuryButton from '../../../ui/luxury/LuxuryButton.astro';

interface Props {
  startProjectLabel: string;
  startProjectSubLabel: string;
  backToHomeLabel: string;
  contactHref: string;
  homeHref: string;
}

const { startProjectLabel, startProjectSubLabel, backToHomeLabel, contactHref, homeHref } = Astro.props;
---

<section class="relative py-20 sm:py-28 px-4 overflow-hidden">
  <div class="c-portfolio-page-luxury__cta-glow"></div>

  <div class="relative z-10 text-center max-w-2xl mx-auto">
    <!-- Diamond divider -->
    <div class="c-portfolio-page-luxury__diamond-line mb-10">
      <span class="text-accent/70 text-sm">◆</span>
    </div>

    <h2 class="text-3xl sm:text-4xl md:text-6xl font-serif font-normal text-base-content mb-4 tracking-tight">
      {startProjectLabel}
    </h2>
    <p class="text-base-content/75 text-lg mb-10 font-light">
      {startProjectSubLabel}
    </p>

    <div class="flex flex-col items-center gap-6">
    <div class="flex flex-col items-center gap-6">
      <LuxuryButton href={contactHref} variant="primary" class="shadow-xl px-12 py-4">
        {startProjectLabel}
      </LuxuryButton>
      
      <LuxuryButton href={homeHref} variant="text" icon={true} class="text-base-content/80 hover:text-accent font-light">
        {backToHomeLabel}
      </LuxuryButton>
    </div>
    </div>
  </div>
</section>
