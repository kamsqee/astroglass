---
/**
 * Docs Search Trigger
 * Button that opens the Command Palette search dialog
 */
import { useTranslations } from '../../utils/i18n';

import '../../styles/components/docs/DocsSearch.css';

interface Props {
  locale: 'en' | 'ru';
}

const { locale } = Astro.props;
const t = useTranslations(locale);
---

<button
  type="button"
  class="c-docs-search__trigger group"
  aria-label="Search documentation"
  onclick="window.__SEARCH_OPEN__ = true; window.dispatchEvent(new CustomEvent('open-search'));"
>
  <svg class="c-docs-search__icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
  </svg>
  <span class="c-docs-search__text">{t('docs.searchDocs') || 'Search...'}</span>
  <kbd class="c-docs-search__kbd">âŒ˜K</kbd>
</button>

