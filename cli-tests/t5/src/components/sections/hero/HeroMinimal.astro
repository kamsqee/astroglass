---
/**
 * Hero Minimal - The Narrative Unfold
 * Scroll-driven storytelling hero that reveals value proposition in stages.
 * Each stage fits within viewport. CTA locks as sticky on final stage.
 */
import '../../../styles/components/hero/HeroMinimal.css';
import { useTranslations } from '../../../utils/i18n';
import { getLocaleFromUrl } from '../../../utils/locale-utils';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
---

<section class="hero-minimal-container relative">
  <!-- Stage 1: The Hook -->
  <div class="hero-minimal-stage stage-1 min-h-screen flex items-center justify-center px-4 relative">
    <div class="absolute inset-0 pointer-events-none">
      <div class="hero-minimal-glow absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] bg-accent opacity-10 blur-[120px] rounded-full"></div>
    </div>
    
    <div class="relative z-10 text-center">
      <h1 class="hero-minimal-word text-7xl sm:text-9xl md:text-[12rem] lg:text-[16rem] font-black tracking-tighter text-base-content leading-none mb-8 px-4 py-2">
        {t('hero.faster')}
      </h1>
      
      <a href="#about" aria-hidden="true" tabindex="-1" class="hero-minimal-scroll-hint flex flex-col items-center gap-3 text-base-content hover:text-base-content/80 transition-colors mt-8 animate-pulse cursor-pointer">
        <span class="text-xs uppercase tracking-widest">{t('hero.scrollToExplore')}</span>
        <svg class="w-5 h-5 animate-bounce" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </a>
    </div>
  </div>

  <!-- Stage 2: The Expansion -->
  <div class="hero-minimal-stage stage-2 min-h-screen flex items-center justify-center px-4 relative overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-accent/20 blur-[150px] rounded-full"></div>
    </div>
    
    <div class="relative z-10 text-center max-w-4xl">
      <h2 class="text-4xl sm:text-6xl md:text-8xl font-black tracking-tight text-base-content mb-8 leading-tight">
        {t('hero.buildFaster')}
      </h2>
      
      <div class="inline-flex items-center gap-4 px-6 py-4 rounded-2xl bg-accent/10 border border-accent/20">
        <span class="text-4xl sm:text-5xl md:text-6xl font-black text-accent">10×</span>
        <div class="text-left">
          <p class="text-base sm:text-lg font-bold text-base-content">{t('hero.shippingVelocity')}</p>
          <p class="text-sm text-base-content/75">{t('cta.proof')}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Stage 3: Social Proof -->
  <div class="hero-minimal-stage stage-3 min-h-screen flex items-center justify-center px-4 relative overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/3 right-1/4 w-[300px] h-[300px] bg-accent/10 blur-[100px] rounded-full"></div>
      <div class="absolute bottom-1/3 left-1/4 w-[250px] h-[250px] bg-accent/15 blur-[80px] rounded-full"></div>
    </div>
    
    <div class="relative z-10 text-center max-w-5xl">
      <p class="text-lg sm:text-xl text-base-content/75 uppercase tracking-widest mb-8">{t('hero.askLeaders')}</p>
      
      <!-- Logo cloud -->
      <div class="flex flex-wrap items-center justify-center gap-8 sm:gap-12 mb-12">
        <div class="text-3xl sm:text-4xl font-black text-base-content/20 hover:text-base-content/75 transition-colors duration-500">Vercel</div>
        <div class="text-3xl sm:text-4xl font-black text-base-content/20 hover:text-base-content/75 transition-colors duration-500">Linear</div>
        <div class="text-3xl sm:text-4xl font-black text-base-content/20 hover:text-base-content/75 transition-colors duration-500">Stripe</div>
        <div class="text-3xl sm:text-4xl font-black text-base-content/20 hover:text-base-content/75 transition-colors duration-500">Notion</div>
      </div>

      <!-- Mini testimonials -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-3xl mx-auto">
        <div class="p-5 rounded-2xl bg-base-content/[0.03] border border-base-content/5 backdrop-blur-sm">
          <p class="text-sm text-base-content/75 mb-3 italic">"{t('testimonial.q5')}"</p>
          <p class="text-xs text-base-content/75">— {t('testimonial.roles.lead')}</p>
        </div>
        <div class="p-5 rounded-2xl bg-base-content/[0.03] border border-base-content/5 backdrop-blur-sm">
          <p class="text-sm text-base-content/75 mb-3 italic">"{t('testimonial.q6')}"</p>
          <p class="text-xs text-base-content/75">— {t('testimonial.roles.senior')}</p>
        </div>
        <div class="p-5 rounded-2xl bg-base-content/[0.03] border border-base-content/5 backdrop-blur-sm">
          <p class="text-sm text-base-content/75 mb-3 italic">"{t('testimonial.q7')}"</p>
          <p class="text-xs text-base-content/75">— {t('testimonial.roles.founder')}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Stage 4: The Ask -->
  <div class="hero-minimal-stage stage-4 min-h-screen flex items-center justify-center px-4 relative overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-accent/5 to-transparent"></div>
    </div>
    
    <div class="relative z-10 text-center max-w-3xl">
      <h2 class="text-5xl sm:text-7xl md:text-9xl font-black tracking-tight text-base-content mb-10 leading-none">
        {t('hero.readyToBuild')}
      </h2>
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8">
        <a href="#about" class="w-full sm:w-auto px-10 py-5 rounded-2xl bg-accent text-base-100 font-black text-lg hover:scale-105 active:scale-95 transition-all duration-300 shadow-xl hover:shadow-2xl text-center">
          {t('hero.startBuilding')}
        </a>
        <a href={`/${locale}/docs`} class="w-full sm:w-auto px-10 py-5 rounded-2xl border border-base-content/10 bg-base-content/5 text-base-content font-bold hover:bg-base-content hover:text-base-100 transition-all duration-300 text-center">
          {t('hero.viewFullDemo')}
        </a>
      </div>

      <div class="flex flex-wrap items-center justify-center gap-4 text-sm text-base-content/75">
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
          {t('cta.noCreditCard')}
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
          {t('cta.setup2min')}
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
          {t('cta.cancelAnytime')}
        </span>
      </div>
    </div>
  </div>

  <!-- Sticky CTA Bar (appears on stage 4) -->
  <div class="hero-minimal-sticky-cta fixed bottom-0 left-0 right-0 p-4 bg-base-100/80 backdrop-blur-xl border-t border-base-content/5 z-50 translate-y-full transition-transform duration-500">
    <div class="max-w-4xl mx-auto flex items-center justify-between gap-4">
      <p class="text-sm font-medium text-base-content hidden sm:block">{t('hero.readyToBuild')}</p>
      <div class="flex gap-3 w-full sm:w-auto">
        <a href="#about" class="flex-1 sm:flex-none px-6 py-3 rounded-xl bg-accent text-base-100 font-bold text-sm text-center hover:scale-105 transition-all duration-300">
          {t('hero.startBuilding')}
        </a>
        <a href={`/${locale}/docs`} class="px-6 py-3 rounded-xl border border-base-content/10 text-base-content font-bold text-sm hover:bg-base-content/[0.03] transition-all duration-300 hidden sm:block">
          {t('cta.secondary')}
        </a>
      </div>
    </div>
  </div>

  <!-- Progress indicator -->
  <div class="hero-minimal-progress fixed right-4 top-1/2 -translate-y-1/2 z-40 hidden lg:flex flex-col gap-3">
    <div class="hero-minimal-progress-dot w-2 h-2 rounded-full bg-accent transition-all duration-300" data-stage="1"></div>
    <div class="hero-minimal-progress-dot w-2 h-2 rounded-full bg-base-content/20 transition-all duration-300" data-stage="2"></div>
    <div class="hero-minimal-progress-dot w-2 h-2 rounded-full bg-base-content/20 transition-all duration-300" data-stage="3"></div>
    <div class="hero-minimal-progress-dot w-2 h-2 rounded-full bg-base-content/20 transition-all duration-300" data-stage="4"></div>
  </div>
</section>




<script>
  function initHeroMinimal() {
    const stages = document.querySelectorAll('.hero-minimal-stage');
    const progressDots = document.querySelectorAll('.hero-minimal-progress-dot');
    const stickyCta = document.querySelector('.hero-minimal-sticky-cta');
    
    if (!stages.length) return;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
          
          // Update progress dots
          const stageNum = entry.target.classList.contains('stage-1') ? 1 :
                          entry.target.classList.contains('stage-2') ? 2 :
                          entry.target.classList.contains('stage-3') ? 3 : 4;
          
          progressDots.forEach(dot => {
            const dotStage = parseInt((dot as HTMLElement).dataset.stage || '0');
            dot.classList.toggle('active', dotStage === stageNum);
            dot.classList.toggle('bg-accent', dotStage <= stageNum);
            dot.classList.toggle('bg-base-content/20', dotStage > stageNum);
          });

          // Show sticky CTA on stage 4
          if (stageNum === 4) {
            stickyCta?.classList.add('visible');
          } else {
            stickyCta?.classList.remove('visible');
          }
        }
      });
    }, { 
      threshold: 0.5,
      rootMargin: '-10% 0px -10% 0px'
    });

    stages.forEach(stage => observer.observe(stage));

    // Click on progress dots to scroll
    progressDots.forEach(dot => {
      dot.addEventListener('click', () => {
        const stageNum = (dot as HTMLElement).dataset.stage;
        const targetStage = document.querySelector(`.hero-minimal-stage.stage-${stageNum}`);
        targetStage?.scrollIntoView({ behavior: 'smooth' });
      });
    });
  }

  initHeroMinimal();
  document.addEventListener('astro:after-swap', initHeroMinimal);
</script>
