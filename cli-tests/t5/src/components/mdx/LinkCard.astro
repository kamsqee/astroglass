---
/**
 * Link Card Component
 * Visual navigation link.
 */
interface Props {
  title: string;
  href: string;
  icon?: string;
  description?: string;
}

const { title, href, icon, description } = Astro.props;
---


<a href={href} class="
    group relative block p-6 h-full not-prose
    rounded-2xl border border-accent/15
    bg-base-content/5 backdrop-blur-md
    hover:bg-accent/5 hover:border-accent/50
    hover:-translate-y-1 hover:shadow-lg
    transition-all duration-300 ease-out
    no-underline
">
  <!-- Gradient overlay on hover -->
  <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-[hsl(var(--a))/10] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 ease-out pointer-events-none"></div>
  
  <div class="relative z-10 flex flex-col h-full">
    <div class="flex items-start justify-between gap-4">
      <div class="flex-1">
        <h3 class="text-lg font-semibold text-[hsl(var(--bc))] group-hover:text-[hsl(var(--a))] transition-colors m-0 leading-tight">
          {title}
        </h3>
        {description && (
          <p class="text-sm text-[hsl(var(--bc))/70] mt-2 mb-0 leading-relaxed group-hover:text-[hsl(var(--bc))/90] transition-colors">
            {description}
          </p>
        )}
      </div>
      
      {icon ? (
        <div class="shrink-0 text-2xl text-[hsl(var(--bc))/50] group-hover:text-[hsl(var(--a))] group-hover:scale-110 transition-all duration-300">
          {icon}
        </div>
      ) : (
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 text-[hsl(var(--bc))/30] group-hover:text-[hsl(var(--a))] group-hover:translate-x-1 transition-all duration-300">
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      )}
    </div>
  </div>
</a>
