---
/**
 * Badge Component
 * 
 * Display version, status, or type badges for documentation.
 * 
 * Usage in MDX:
 * <Badge type="new">glass.0</Badge>
 * <Badge type="deprecated">Legacy</Badge>
 * <Badge type="experimental">Beta</Badge>
 */

import '../../styles/components/mdx/Badge.css';

export interface Props {
  type?: 'default' | 'new' | 'deprecated' | 'experimental' | 'required' | 'optional';
}

const { type = 'default' } = Astro.props;
---

<span class:list={['c-doc-badge', `c-doc-badge--${type}`]}>
  <slot />
</span>
