---
/**
 * Liquid Portfolio â€” Project Cards
 * Alternating L/R cards with expandable inline detail panels.
 */
import '../../../../styles/components/portfolio/PortfolioCardsLiquid.css';
interface Project {
  id: string;
  title: string;
  description: string;
  longDescription: string;
  category: string;
  categoryLabel: string;
  challenge: string;
  solution: string;
  impact: string;
  techStack: string[];
  metric: string;
  metricLabel: string;
  color: string;
}

interface Props {
  projects: Project[];
  viewDetailsLabel: string;
  challengeLabel: string;
  solutionLabel: string;
  impactLabel: string;
  techStackLabel: string;
  closeDetailsLabel: string;
}

const { projects, viewDetailsLabel, challengeLabel, solutionLabel, impactLabel, techStackLabel, closeDetailsLabel } = Astro.props;
---

<section class="relative py-12 sm:py-16 md:py-20 px-4 sm:px-6" id="pp-liquid-projects">
  <div class="max-w-6xl mx-auto space-y-8 sm:space-y-12">
    {projects.map((p, i) => (
      <div 
        class="c-portfolio-page-liquid__card"
        data-category={p.category}
        data-project-id={p.id}
      >
        <div class="c-portfolio-page-liquid__card-inner">
          <!-- Card Layout: alternating visual/content sides -->
          <div class={`grid grid-cols-1 lg:grid-cols-2 ${i % 2 === 1 ? 'lg:direction-rtl' : ''}`}>
            
            <!-- Visual Side -->
            <div class={`c-portfolio-page-liquid__visual ${i % 2 === 1 ? 'lg:order-2' : ''}`}>
              <div class={`absolute inset-0 bg-gradient-to-br ${p.color} opacity-20`}></div>
              
              <!-- Blob overlay -->
              <svg class="c-portfolio-page-liquid__visual-blob" viewBox="0 0 100 100" preserveAspectRatio="none">
                <path d="M45,25 Q65,5 85,25 Q105,45 85,70 Q65,95 45,75 Q25,55 25,45 Q25,35 45,25Z" fill="currentColor" class="text-base-content" opacity="0.08" />
              </svg>

              <!-- Category badge -->
              <div class="absolute top-6 left-6 sm:top-8 sm:left-8 z-10">
                <span class="px-3 py-1.5 rounded-full bg-base-content/10 backdrop-blur-sm border border-base-content/20 text-base-content text-xs font-bold">
                  {p.categoryLabel}
                </span>
              </div>

              <!-- Metric badge -->
              <div class="absolute top-6 right-6 sm:top-8 sm:right-8 z-10">
                <div class="c-portfolio-page-liquid__metric">
                  <span class={`text-2xl sm:text-3xl font-black bg-gradient-to-r ${p.color} bg-clip-text text-transparent`}>
                    {p.metric}
                  </span>
                  <span class="text-[10px] text-base-content/75 font-bold uppercase tracking-wider mt-0.5">
                    {p.metricLabel}
                  </span>
                </div>
              </div>

              <!-- Drop icon -->
              <div class="c-portfolio-page-liquid__drop-icon absolute bottom-6 right-6 sm:bottom-8 sm:right-8 w-20 h-20 sm:w-24 sm:h-24 bg-base-content/10 border border-base-content/20 flex items-center justify-center z-10">
                <svg class="w-8 h-8 sm:w-10 sm:h-10 text-base-content/75" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2C12 2 5.5 11 5.5 15.5C5.5 19.09 8.41 22 12 22C15.59 22 18.5 19.09 18.5 15.5C18.5 11 12 2 12 2Z"/>
                </svg>
              </div>

              <!-- Project number watermark -->
              <div class="absolute bottom-4 left-6 sm:bottom-6 sm:left-8 z-10">
                <span class="text-7xl sm:text-8xl font-black text-base-content/[0.06] leading-none select-none">
                  {String(i + 1).padStart(2, '0')}
                </span>
              </div>
            </div>

            <!-- Content Side -->
            <div class={`p-6 sm:p-8 lg:p-10 xl:p-12 flex flex-col justify-center ${i % 2 === 1 ? 'lg:order-1' : ''}`}>
              <span class="text-accent font-bold text-xs uppercase tracking-widest mb-3">{p.categoryLabel}</span>
              
              <h2 class="text-2xl sm:text-3xl lg:text-4xl font-black text-base-content mb-3 tracking-tight">
                {p.title}
              </h2>
              
              <p class="text-base sm:text-lg text-base-content/75 leading-relaxed mb-4">
                {p.longDescription}
              </p>

              <!-- Tech stack preview -->
              <div class="flex flex-wrap gap-2 mb-6">
                {p.techStack.slice(0, 3).map((tech) => (
                  <span class="c-portfolio-page-liquid__tech-pill">{tech}</span>
                ))}
                {p.techStack.length > 3 && (
                  <span class="c-portfolio-page-liquid__tech-pill">+{p.techStack.length - 3}</span>
                )}
              </div>

              <!-- View Details button -->
              <button 
                class="inline-flex items-center gap-3 px-6 py-3 rounded-xl bg-accent text-white font-bold text-sm w-fit hover:scale-105 active:scale-95 transition-all duration-300 group/btn cursor-pointer"
                data-toggle-details={p.id}
              >
                {viewDetailsLabel}
                <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            </div>
          </div>

          <!-- Expandable Detail Panel -->
          <div class="c-portfolio-page-liquid__details" data-details={p.id}>
            <div class="c-portfolio-page-liquid__details-inner">
              <!-- Narrative: Challenge / Solution / Impact -->
              <div class="c-portfolio-page-liquid__narrative mb-6">
                <div class="c-portfolio-page-liquid__narrative-block">
                  <h4 class="text-xs font-black uppercase tracking-[0.2em] text-accent mb-3">
                    {challengeLabel}
                  </h4>
                  <p class="text-sm text-base-content/75 leading-relaxed">
                    {p.challenge}
                  </p>
                </div>
                <div class="c-portfolio-page-liquid__narrative-block">
                  <h4 class="text-xs font-black uppercase tracking-[0.2em] text-accent mb-3">
                    {solutionLabel}
                  </h4>
                  <p class="text-sm text-base-content/75 leading-relaxed">
                    {p.solution}
                  </p>
                </div>
                <div class="c-portfolio-page-liquid__narrative-block">
                  <h4 class="text-xs font-black uppercase tracking-[0.2em] text-accent mb-3">
                    {impactLabel}
                  </h4>
                  <p class="text-sm text-base-content/75 leading-relaxed">
                    {p.impact}
                  </p>
                </div>
              </div>

              <!-- Full Tech Stack -->
              <div class="mb-4">
                <h4 class="text-xs font-black uppercase tracking-[0.2em] text-base-content/75 mb-3">
                  {techStackLabel}
                </h4>
                <div class="flex flex-wrap gap-2">
                  {p.techStack.map((tech) => (
                    <span class="c-portfolio-page-liquid__tech-pill">{tech}</span>
                  ))}
                </div>
              </div>

              <!-- Close button -->
              <button 
                class="inline-flex items-center gap-2 text-base-content/75 text-xs font-bold hover:text-accent transition-colors duration-300 mt-2 cursor-pointer"
                data-close-details={p.id}
              >
                <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
                </svg>
                {closeDetailsLabel}
              </button>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>



