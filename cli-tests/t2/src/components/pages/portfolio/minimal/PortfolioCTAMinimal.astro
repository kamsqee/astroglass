---
/**
 * Minimal Portfolio â€” Bottom CTA
 * Brutalist CTA with gradient title and bold buttons.
 */
interface Props {
  startProjectLabel: string;
  startProjectSubLabel: string;
  backToHomeLabel: string;
  contactHref: string;
  homeHref: string;
}

const { startProjectLabel, startProjectSubLabel, backToHomeLabel, contactHref, homeHref } = Astro.props;
---

<section class="relative py-24 sm:py-32 px-4 overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-accent/5 to-transparent"></div>
  </div>

  <div class="relative z-10 text-center max-w-4xl mx-auto">
    <h2 class="c-portfolio-page-minimal__cta-title text-5xl sm:text-7xl md:text-9xl font-black tracking-tighter leading-none mb-6">
      {startProjectLabel}
    </h2>
    <p class="text-base-content/80 text-lg mb-10">
      {startProjectSubLabel}
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href={contactHref} class="px-10 py-5 rounded-2xl bg-accent text-base-100 font-black text-lg hover:scale-105 active:scale-95 transition-all duration-300 shadow-xl">
        {startProjectLabel}
      </a>
      <a href={homeHref} class="inline-flex items-center gap-3 px-10 py-5 rounded-2xl border border-base-content/10 bg-base-content/5 text-base-content font-bold hover:bg-base-content hover:text-base-100 transition-all duration-300">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
        </svg>
        {backToHomeLabel}
      </a>
    </div>
  </div>
</section>
