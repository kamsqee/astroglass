---
import { useTranslations } from '../../utils/i18n';
import { getLocaleFromUrl } from '../../utils/locale-utils';
import '../../styles/components/blog/ShareBar.css';

interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);
---

<div class="share-bar" data-share-bar>
  <span class="share-bar__label">{t('blog.share')}</span>

  {/* Twitter/X */}
  <a
    href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="share-bar__btn"
    aria-label="Share on X"
  >
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
  </a>

  {/* LinkedIn */}
  <a
    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`}
    target="_blank"
    rel="noopener noreferrer"
    class="share-bar__btn"
    aria-label="Share on LinkedIn"
  >
    <svg viewBox="0 0 24 24" fill="currentColor">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
  </a>

  {/* Copy link */}
  <button
    class="share-bar__btn"
    aria-label={t('blog.copyLink')}
    data-copy-url={url}
  >
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
      <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
    </svg>
  </button>

  <span class="share-bar__toast" data-copy-toast>{t('blog.linkCopied')}</span>
</div>

<script>
  function initShareBar() {
    document.querySelectorAll('[data-copy-url]').forEach(btn => {
      btn.addEventListener('click', async () => {
        const url = btn.getAttribute('data-copy-url');
        if (!url) return;
        try {
          await navigator.clipboard.writeText(url);
          const toast = btn.closest('[data-share-bar]')?.querySelector('[data-copy-toast]');
          if (toast) {
            toast.classList.add('share-bar__toast--visible');
            setTimeout(() => toast.classList.remove('share-bar__toast--visible'), 2000);
          }
        } catch { /* clipboard not available */ }
      });
    });
  }

  initShareBar();
  document.addEventListener('astro:after-swap', initShareBar);
</script>
