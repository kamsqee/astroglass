---
/**
 * Minimal Portfolio — Project Rows
 * Full-width horizontal rows with number + title and inline expandable detail panels.
 */
interface Project {
  id: string;
  title: string;
  description: string;
  category: string;
  categoryLabel: string;
  challenge: string;
  solution: string;
  impact: string;
  techStack: string[];
  metric: string;
  metricLabel: string;
  num: string;
}

interface Props {
  projects: Project[];
  challengeLabel: string;
  solutionLabel: string;
  impactLabel: string;
  techStackLabel: string;
  closeDetailsLabel: string;
}

const { projects, challengeLabel, solutionLabel, impactLabel, techStackLabel, closeDetailsLabel } = Astro.props;
---

<section class="relative py-12 sm:py-16 md:py-20 px-4 sm:px-6" id="pp-minimal-projects">
  <div class="max-w-7xl mx-auto">
    <div class="space-y-0">
      {projects.map((p, i) => (
        <div data-category={p.category} data-project-id={p.id} class="c-portfolio-page-minimal__item">
          <!-- Clickable Row -->
          <div class="c-portfolio-page-minimal__row" data-toggle-details={p.id}>
            <div class="relative z-10 flex items-center gap-6 sm:gap-10 md:gap-12 min-w-0">
              <span class="c-portfolio-page-minimal__num text-3xl sm:text-4xl md:text-6xl font-thin text-base-content/10 flex-shrink-0">
                {p.num}
              </span>
              <div class="min-w-0">
                <h3 class="c-portfolio-page-minimal__title text-3xl sm:text-5xl md:text-7xl lg:text-8xl font-black text-base-content tracking-tighter leading-none mb-1">
                  {p.title}
                </h3>
                <div class="flex items-center gap-3 mt-2">
                  <span class="text-[10px] font-black uppercase tracking-[0.3em] text-base-content/25">
                    {p.categoryLabel}
                  </span>
                  <span class="text-base-content/10">·</span>
                  <span class="text-sm font-black text-accent">{p.metric}</span>
                  <span class="text-xs text-base-content/80">{p.metricLabel}</span>
                </div>
              </div>
            </div>

            <!-- Arrow (desktop hover reveal) -->
            <div class="c-portfolio-page-minimal__arrow relative z-10 hidden md:flex opacity-0 translate-x-4 pr-4 flex-shrink-0">
              <div class="w-14 h-14 rounded-xl border border-base-content/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Expandable Detail Panel -->
          <div class="c-portfolio-page-minimal__details" data-details={p.id}>
            <div class="c-portfolio-page-minimal__details-inner">
              <!-- Long description -->
              <p class="text-base text-base-content/75 mb-6 max-w-3xl leading-relaxed">
                {p.description}
              </p>

              <!-- Narrative Grid -->
              <div class="c-portfolio-page-minimal__narrative mb-6">
                <div class="c-portfolio-page-minimal__narrative-block">
                  <h4 class="text-[10px] font-black uppercase tracking-[0.3em] text-accent mb-3">
                    {challengeLabel}
                  </h4>
                  <p class="text-sm text-base-content/45 leading-relaxed">{p.challenge}</p>
                </div>
                <div class="c-portfolio-page-minimal__narrative-block">
                  <h4 class="text-[10px] font-black uppercase tracking-[0.3em] text-accent mb-3">
                    {solutionLabel}
                  </h4>
                  <p class="text-sm text-base-content/45 leading-relaxed">{p.solution}</p>
                </div>
                <div class="c-portfolio-page-minimal__narrative-block">
                  <h4 class="text-[10px] font-black uppercase tracking-[0.3em] text-accent mb-3">
                    {impactLabel}
                  </h4>
                  <p class="text-sm text-base-content/45 leading-relaxed">{p.impact}</p>
                </div>
              </div>

              <!-- Tech Stack -->
              <div class="mb-5">
                <h4 class="text-[10px] font-black uppercase tracking-[0.3em] text-base-content/20 mb-3">
                  {techStackLabel}
                </h4>
                <div class="flex flex-wrap gap-1.5">
                  {p.techStack.map((tech) => (
                    <span class="c-portfolio-page-minimal__tech-pill">{tech}</span>
                  ))}
                </div>
              </div>

              <!-- Close -->
              <button
                class="inline-flex items-center gap-2 text-base-content/25 text-[10px] font-black uppercase tracking-[0.3em] hover:text-accent transition-colors duration-300 cursor-pointer"
                data-close-details={p.id}
              >
                <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
                </svg>
                {closeDetailsLabel}
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
