---
/**
 * Glass Portfolio â€” Bottom CTA
 * 
 * Call-to-action section with ambient glow,
 * heading, and navigation links.
 */
import SectionHeading from '../../../ui/glass/SectionHeading.astro';

interface Props {
  startProjectLabel: string;
  startProjectSubLabel: string;
  backToHomeLabel: string;
  contactHref: string;
  homeHref: string;
}

const { startProjectLabel, startProjectSubLabel, backToHomeLabel, contactHref, homeHref } = Astro.props;
---

<section class="relative py-20 sm:py-28 px-4 overflow-hidden">
  <div class="c-portfolio-page-glass__cta-glow"></div>

  <div class="relative z-10 text-center max-w-2xl mx-auto">
    <SectionHeading size="sm" align="center" class="text-3xl sm:text-4xl md:text-5xl mb-4">
      {startProjectLabel}
    </SectionHeading>
    <p class="text-base-content/75 text-lg mb-8">
      {startProjectSubLabel}
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href={contactHref} class="px-10 py-4 rounded-2xl bg-base-content text-base-100 font-bold hover:scale-105 active:scale-95 transition-all duration-300 shadow-xl">
        {startProjectLabel}
      </a>
      <a href={homeHref} class="inline-flex items-center gap-2 text-base-content/75 font-medium hover:text-accent transition-colors duration-300">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"/>
        </svg>
        {backToHomeLabel}
      </a>
    </div>
  </div>
</section>
