---
/**
 * Header Component
 *
 * Responsive header with nested dropdown navigation and mobile menu.
 * Uses modular sub-components for reusability.
 *
 * @example
 * ```astro
 * <Header />
 * ```
 */
import { getLocaleFromUrl, useTranslations } from '../../../utils/i18n';
import LocalizedLink from '../../ui/LocalizedLink.astro';
import { buildThemeNavLinks } from '../../../config/navigation';
import Logo from '../../ui/Logo.astro';
import DesktopNav from '../../layout/DesktopNav.astro';
import ThemeSwitcher from '../../ui/ThemeSwitcher.astro';
import LanguageSwitcher from '../../ui/LanguageSwitcher.astro';
import '../../../styles/components/header/HeaderNeo.css';

export interface Props {
  /** Additional CSS classes for the header */
  class?: string;
}

const { class: className = '' } = Astro.props;

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const navLinks = buildThemeNavLinks(t, 'liquid');
---

<!-- Desktop Header (Liquid-style sticky bar) -->
<header class:list={['header-liquid sticky top-0 z-50 hidden lg:block', className]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-18">
      <!-- Logo -->
      <Logo />

      <!-- Desktop Navigation -->
      <DesktopNav links={navLinks} />

      <!-- Desktop Switchers -->
      <div class="hidden lg:flex items-center gap-1.5">
        <ThemeSwitcher />
        <div class="switcher-separator"></div>
        <LanguageSwitcher />
      </div>
    </div>
  </div>
</header>

<!-- Mobile Header (Neo-style glass pill) -->
<header class="header-neo lg:hidden" id="header-neo-liquid">
  <div class="header-neo-inner">
    <LocalizedLink href="/" class="logo-neo" aria-label={t('nav.home')}>
      <span class="logo-neo-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 2.5C12 2.5 4 10 4 14.5C4 18.92 7.58 22.5 12 22.5C16.42 22.5 20 18.92 20 14.5C20 10 12 2.5 12 2.5Z"/>
          <path d="M8.5 14L12 8L15.5 14L12 18Z"/>
        </svg>
      </span>
      <span class="logo-neo-text">{t('siteName')}</span>
    </LocalizedLink>
    <button type="button" class="burger-neo" id="burger-liquid" aria-label="Toggle menu">
      <span class="burger-neo-line"></span>
      <span class="burger-neo-line"></span>
    </button>
  </div>
</header>

<!-- Fullscreen Overlay Navigation (Neo-style) -->
<div class="overlay-neo" id="overlay-liquid">
  <div class="overlay-neo-content">
    <nav class="overlay-neo-nav">
      {navLinks.map((link) => (
        link.children ? (
          <div class="overlay-neo-group" data-neo-group-liquid>
            <button type="button" class="overlay-neo-group-trigger">
              <span class="overlay-neo-link-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {link.icon.paths.map((p) => <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d={p} />)}
                </svg>
              </span>
              {link.label}
              <svg class="overlay-neo-group-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div class="overlay-neo-group-children">
              <div class="overlay-neo-group-children-inner">
                {link.children.map((child) => (
                  <LocalizedLink href={child.href} class="overlay-neo-child-link">{child.label}</LocalizedLink>
                ))}
              </div>
            </div>
          </div>
        ) : (
          <LocalizedLink href={link.href} class="overlay-neo-link">
            <span class="overlay-neo-link-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {link.icon.paths.map((p) => <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d={p} />)}
              </svg>
            </span>
            {link.label}
          </LocalizedLink>
        )
      ))}
    </nav>

    <div class="overlay-neo-footer">
      <div class="overlay-neo-footer-item">
        <span class="overlay-neo-footer-label">{t('themeSwitcher.label')}</span>
        <ThemeSwitcher variant="mobile" />
      </div>
      <div class="overlay-neo-footer-item">
        <span class="overlay-neo-footer-label">{t('languageSwitcher.label')}</span>
        <LanguageSwitcher variant="mobile" />
      </div>
    </div>
  </div>
</div>

<script>
  let liquidController: AbortController | null = null;

  function initHeaderLiquid() {
    liquidController?.abort();
    liquidController = new AbortController();
    const { signal } = liquidController;

    const burger = document.getElementById('burger-liquid');
    const overlay = document.getElementById('overlay-liquid');

    if (!burger || !overlay) return;

    // Reset state
    overlay.classList.remove('is-open');
    burger.classList.remove('is-active');

    const closeOverlay = () => {
      overlay.classList.remove('is-open');
      burger.classList.remove('is-active');
      document.body.style.overflow = '';
    };

    // ---- Mobile overlay ----
    burger.addEventListener('click', () => {
      const isOpen = overlay.classList.toggle('is-open');
      burger.classList.toggle('is-active');
      document.body.style.overflow = isOpen ? 'hidden' : '';
    }, { signal });

    overlay.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeOverlay, { signal });
    });

    // ---- Mobile expandable groups ----
    overlay.querySelectorAll('[data-neo-group-liquid]').forEach(group => {
      const groupTrigger = group.querySelector('.overlay-neo-group-trigger');
      if (!groupTrigger) return;

      groupTrigger.addEventListener('click', () => {
        group.classList.toggle('is-open');
      }, { signal });
    });

    // Handle keyboard escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && overlay.classList.contains('is-open')) {
        closeOverlay();
        burger.focus();
      }
    }, { signal });

    // Handle window resize
    let resizeTimer: ReturnType<typeof setTimeout>;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        if (window.innerWidth >= 1024 && overlay.classList.contains('is-open')) {
          closeOverlay();
        }
      }, 100);
    }, { signal });
  }

  initHeaderLiquid();
  document.addEventListener('astro:after-swap', initHeaderLiquid);
</script>

