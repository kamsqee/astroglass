---
/**
 * LiquidSectionTag — Liquid Theme
 * Unified eyebrow / category tag with animated glowing dot.
 *
 * Consistent with Liquid's organic pill-badge aesthetic.
 *
 * @prop label — Text content (required)
 * @prop class — Additional classes (margins, animations, etc.)
 */
interface Props {
  label: string;
  class?: string;
}

const { label, class: className } = Astro.props;
---

<div class:list={["inline-flex items-center gap-3 px-5 py-2 rounded-full border border-accent/20 bg-accent/[0.05] backdrop-blur-xl text-[10px] font-black uppercase tracking-[0.2em] text-accent shadow-sm", className]}>
  <span class="relative flex h-2 w-2">
    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-40"></span>
    <span class="relative inline-flex rounded-full h-2 w-2 bg-accent shadow-[0_0_8px_hsl(var(--a))]"></span>
  </span>
  {label}
</div>
