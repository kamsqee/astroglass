---
/**
 * Footer Index — The Footer for the Landing Page
 * Cloned from FooterLiquid, customized with anchor links for the index page sections.
 */
import { useTranslations } from '../../../utils/i18n';
import { getLocaleFromUrl } from '../../../utils/locale-utils';
import LocalizedLink from '../../ui/LocalizedLink.astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const currentYear = new Date().getFullYear();

import '../../../styles/components/footer/FooterLiquid.css';
---

<footer class="footer-liquid relative py-16 lg:py-20 px-4 sm:px-6 bg-base-100">
  <!-- Background glow -->
  <div class="footer-liquid-glow"></div>

  <div class="max-w-6xl mx-auto relative">
    <!-- Main footer grid -->
    <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 mb-12 lg:mb-16">
      
      <!-- Brand Column -->
      <div class="col-span-2 sm:col-span-2 lg:col-span-1">
        <LocalizedLink href="/" class="inline-flex items-center gap-2 text-xl font-black text-base-content mb-4 hover:!transform-none">
          <span class="footer-liquid-droplet w-8 h-8 rounded-lg bg-accent/20 flex items-center justify-center">
            <svg class="w-4 h-4 text-accent" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C12 2 6 10 6 14.5C6 17.54 8.69 20 12 20C15.31 20 18 17.54 18 14.5C18 10 12 2 12 2Z"/>
            </svg>
          </span>
          {t('footer.company')}
        </LocalizedLink>
        <p class="text-sm text-base-content/75 leading-relaxed max-w-xs">
          {t('footer.tagline')}
        </p>
        
        <!-- Social Icons -->
        <div class="flex items-center gap-3 mt-6">
          <a href="https://github.com/kamsqee/astroglass" target="_blank" rel="noopener noreferrer" class="footer-liquid-social-icon w-9 h-9 rounded-xl bg-base-content/[0.04] border border-base-content/10 flex items-center justify-center text-base-content/75" aria-label={t('footer.social.github')}>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          </a>
          <a href="https://twitter.com/kamsqee" target="_blank" rel="noopener noreferrer" class="footer-liquid-social-icon w-9 h-9 rounded-xl bg-base-content/[0.04] border border-base-content/10 flex items-center justify-center text-base-content/75" aria-label={t('footer.social.twitter')}>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a href="https://discord.gg/astroglass" target="_blank" rel="noopener noreferrer" class="footer-liquid-social-icon w-9 h-9 rounded-xl bg-base-content/[0.04] border border-base-content/10 flex items-center justify-center text-base-content/75" aria-label={t('footer.social.discord')}>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189z"/></svg>
          </a>
        </div>
      </div>

      <!-- Product Links -->
      <div>
        <h3 class="text-xs font-black uppercase tracking-[0.2em] text-base-content/75 mb-4">{t('footer.links.product')}</h3>
        <ul class="space-y-3">
          <li><LocalizedLink href="#features" class="text-sm text-base-content/75 hover:text-accent transition-colors">{t('footer.links.features')}</LocalizedLink></li>
          <li><LocalizedLink href="#themes" class="text-sm text-base-content/75 hover:text-accent transition-colors">{t('portfolio.themeGallery.subtitle')}</LocalizedLink></li>

        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="text-xs font-black uppercase tracking-[0.2em] text-base-content/75 mb-4">{t('footer.links.company')}</h3>
        <ul class="space-y-3">
          <li><LocalizedLink href="#showcase" class="text-sm text-base-content/75 hover:text-accent transition-colors">{t('footer.links.about')}</LocalizedLink></li>
          <li><LocalizedLink href="/blog" class="text-sm text-base-content/75 hover:text-accent transition-colors">{t('footer.links.blog')}</LocalizedLink></li>
          <li><LocalizedLink href="/privacy" class="text-sm text-base-content/75 hover:text-accent transition-colors">{t('footer.links.privacy')}</LocalizedLink></li>
          <li><LocalizedLink href="/terms" class="text-sm text-base-content/75 hover:text-accent transition-colors">{t('footer.links.terms')}</LocalizedLink></li>
        </ul>
      </div>

      <!-- Resources Links -->
      <div>
        <h3 class="text-xs font-black uppercase tracking-[0.2em] text-base-content/75 mb-4">{t('footer.links.resources')}</h3>
        <ul class="space-y-3">
          <li><LocalizedLink href="/docs" class="text-sm text-base-content/75 hover:text-accent transition-colors">{t('footer.links.docs')}</LocalizedLink></li>
          <li><LocalizedLink href="#faq-home" class="text-sm text-base-content/75 hover:text-accent transition-colors">{t('footer.links.faq')}</LocalizedLink></li>
        </ul>
      </div>
    </div>

    <!-- Wave Separator -->
    <div class="footer-liquid-wave">
      <svg viewBox="0 0 2400 40" preserveAspectRatio="none" fill="none">
        <path d="M0,20 C100,8 200,32 300,20 C400,8 500,32 600,20 C700,8 800,32 900,20 C1000,8 1100,32 1200,20 C1300,8 1400,32 1500,20 C1600,8 1700,32 1800,20 C1900,8 2000,32 2100,20 C2200,8 2300,32 2400,20" stroke="currentColor" stroke-width="1" stroke-opacity="0.1" class="text-base-content" />
        <path d="M0,24 C150,12 250,36 400,24 C550,12 650,36 800,24 C950,12 1050,36 1200,24 C1350,12 1450,36 1600,24 C1750,12 1850,36 2000,24 C2150,12 2250,36 2400,24" stroke="currentColor" stroke-width="0.5" stroke-opacity="0.06" class="text-accent" />
      </svg>
    </div>

    <!-- Bottom bar -->
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-xs text-base-content/80">
        {t('footer.copyright')} · {t('footer.allRightsReserved')}
      </p>

    </div>
  </div>
</footer>
