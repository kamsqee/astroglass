---
/**
 * Neo Portfolio â€” Card Stack
 * Vertical card stack with gradient accent bars and inline expandable detail panels.
 */
import '../../../../styles/components/portfolio/PortfolioCardsNeo.css';
interface Project {
  id: string;
  title: string;
  longDescription: string;
  category: string;
  categoryLabel: string;
  challenge: string;
  solution: string;
  impact: string;
  techStack: string[];
  metric: string;
  metricLabel: string;
  color: string;
  num: string;
}

interface Props {
  projects: Project[];
  viewDetailsLabel: string;
  challengeLabel: string;
  solutionLabel: string;
  impactLabel: string;
  techStackLabel: string;
  closeDetailsLabel: string;
}

const { projects, viewDetailsLabel, challengeLabel, solutionLabel, impactLabel, techStackLabel, closeDetailsLabel } = Astro.props;
---

<section class="relative pt-20 sm:pt-24 md:pt-32 pb-12 sm:pb-16 md:pb-20 px-4 sm:px-6" id="pp-neo-projects">
  <div class="max-w-5xl mx-auto flex flex-col gap-4 sm:gap-5">
    {projects.map((p, i) => (
      <div
        class="c-portfolio-page-neo__card"
        data-category={p.category}
        data-project-id={p.id}
      >
        <!-- Gradient accent bar -->
        <div class={`c-portfolio-page-neo__accent-bar bg-gradient-to-r ${p.color}`}></div>

        <!-- Background hover glow -->
        <div class={`absolute inset-0 bg-gradient-to-br ${p.color} opacity-0 hover:opacity-[0.03] transition-opacity duration-700 pointer-events-none`}></div>

        <!-- Card main content -->
        <div class="relative z-10 pt-8 pb-5 px-5 sm:pt-9 sm:pb-6 sm:px-6 lg:pt-10 lg:pb-8 lg:px-8">
          <div class="flex flex-col lg:flex-row lg:items-center gap-4 lg:gap-8">
            <!-- Left: Number + Category -->
            <div class="flex lg:flex-col items-center lg:items-start gap-3 lg:gap-1.5 lg:min-w-[80px]">
              <span class={`text-3xl sm:text-4xl lg:text-5xl font-black bg-gradient-to-br ${p.color} bg-clip-text text-transparent`}>
                {p.num}
              </span>
              <span class="px-2.5 py-1 rounded-md bg-base-content/[0.04] text-base-content/75 text-[9px] font-bold uppercase tracking-wider">
                {p.categoryLabel}
              </span>
            </div>

            <!-- Middle: Content -->
            <div class="flex-1 min-w-0">
              <h3 class="text-xl sm:text-2xl lg:text-3xl font-black text-base-content mb-2 tracking-tight">
                {p.title}
              </h3>
              <p class="text-sm text-base-content/45 leading-relaxed max-w-xl">
                {p.longDescription}
              </p>
            </div>

            <!-- Right: Metric + CTA -->
            <div class="flex items-center gap-4 lg:gap-6">
              <div class="text-right hidden sm:block">
                <span class={`text-2xl font-black bg-gradient-to-r ${p.color} bg-clip-text text-transparent`}>{p.metric}</span>
                <span class="block text-[9px] text-base-content/80 font-bold uppercase tracking-wider mt-0.5">{p.metricLabel}</span>
              </div>
              <button
                class={`inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-gradient-to-r ${p.color} text-white font-bold text-xs shadow-lg hover:shadow-xl hover:scale-105 active:scale-95 transition-all duration-300 cursor-pointer whitespace-nowrap`}
                data-toggle-details={p.id}
              >
                {viewDetailsLabel}
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Expandable Detail Panel -->
        <div class="c-portfolio-page-neo__details" data-details={p.id}>
          <div class="c-portfolio-page-neo__details-inner">
            <!-- Narrative Grid -->
            <div class="c-portfolio-page-neo__narrative mb-5">
              <div class="c-portfolio-page-neo__narrative-block">
                <h4 class="text-[10px] font-black uppercase tracking-[0.2em] text-accent mb-2">
                  {challengeLabel}
                </h4>
                <p class="text-sm text-base-content/55 leading-relaxed">{p.challenge}</p>
              </div>
              <div class="c-portfolio-page-neo__narrative-block">
                <h4 class="text-[10px] font-black uppercase tracking-[0.2em] text-accent mb-2">
                  {solutionLabel}
                </h4>
                <p class="text-sm text-base-content/55 leading-relaxed">{p.solution}</p>
              </div>
              <div class="c-portfolio-page-neo__narrative-block">
                <h4 class="text-[10px] font-black uppercase tracking-[0.2em] text-accent mb-2">
                  {impactLabel}
                </h4>
                <p class="text-sm text-base-content/55 leading-relaxed">{p.impact}</p>
              </div>
            </div>

            <!-- Tech Stack -->
            <div class="mb-4">
              <h4 class="text-[10px] font-black uppercase tracking-[0.2em] text-base-content/80 mb-2.5">
                {techStackLabel}
              </h4>
              <div class="flex flex-wrap gap-1.5">
                {p.techStack.map((tech) => (
                  <span class="c-portfolio-page-neo__tech-pill">{tech}</span>
                ))}
              </div>
            </div>

            <!-- Close -->
            <button
              class="inline-flex items-center gap-2 text-base-content/80 text-[10px] font-bold uppercase tracking-widest hover:text-accent transition-colors duration-300 cursor-pointer"
              data-close-details={p.id}
            >
              <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
              </svg>
              {closeDetailsLabel}
            </button>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>



