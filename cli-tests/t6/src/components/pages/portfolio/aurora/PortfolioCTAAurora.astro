---
/**
 * Aurora Portfolio — Bottom CTA
 * Call-to-action with mesh gradient background.
 */
interface Props {
  startProjectLabel: string;
  startProjectSubLabel: string;
  backToHomeLabel: string;
  contactHref: string;
  homeHref: string;
}

const { startProjectLabel, startProjectSubLabel, backToHomeLabel, contactHref, homeHref } = Astro.props;
---

<section class="relative py-20 sm:py-28 px-4 overflow-hidden">
  <div class="absolute inset-0 pointer-events-none">
    <div class="pp-aurora__hero-mesh" style="opacity: 0.6"></div>
  </div>

  <div class="relative z-10 text-center max-w-3xl mx-auto">
    <div class="inline-flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-accent mb-6">
      <span class="portfolio-aurora-label-frame">▮▯▮</span>
      <span>{startProjectLabel}</span>
    </div>

    <h2 class="pp-aurora__cta-title mb-5">{startProjectLabel}</h2>
    <p class="text-base-content/75 text-base mb-8">{startProjectSubLabel}</p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
      <a href={contactHref} class="pp-aurora__cta-btn pp-aurora__cta-btn--primary">
        {startProjectLabel}
      </a>
      <a href={homeHref} class="pp-aurora__cta-btn pp-aurora__cta-btn--secondary inline-flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        {backToHomeLabel}
      </a>
    </div>
  </div>
</section>
