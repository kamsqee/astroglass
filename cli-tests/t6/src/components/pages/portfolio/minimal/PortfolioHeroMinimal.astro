---
/**
 * Minimal Portfolio — Hero Section
 * Massive gradient text hero with tag label and filters.
 */
interface Props {
  categories: Array<{ id: string; label: string }>;
  titleLabel: string;
  pageTitle: string;
  pageSubtitle: string;
}

const { categories, titleLabel, pageTitle, pageSubtitle } = Astro.props;
---

<section class="c-portfolio-page-minimal__hero">
  <div class="c-portfolio-page-minimal__hero-glow"></div>

  <div class="relative z-10 w-full max-w-7xl mx-auto text-center px-4">
    <!-- Label -->
    <span class="c-tag-minimal mb-8"><span class="c-tag-minimal__dash"></span>{titleLabel}</span>

    <!-- Title — massive gradient text -->
    <h1 class="c-portfolio-page-minimal__hero-title text-6xl sm:text-8xl md:text-[10rem] lg:text-[14rem] font-black tracking-tighter leading-none mb-8">
      {pageTitle}
    </h1>

    <!-- Subtitle -->
    <p class="text-lg sm:text-xl text-base-content/75 max-w-2xl mx-auto mb-12">
      {pageSubtitle}
    </p>

    <!-- Category Filters -->
    <div class="flex flex-wrap gap-2 justify-center" id="pp-minimal-filters">
      {categories.map((cat, i) => (
        <button
          class:list={[
            'px-5 py-2.5 rounded-xl text-[10px] font-black uppercase tracking-[0.3em] border transition-all duration-500 cursor-pointer',
            i === 0
              ? 'border-accent text-accent bg-accent/10'
              : 'border-base-content/10 text-base-content/80 hover:border-accent hover:text-accent'
          ]}
          data-filter={cat.id}
        >
          {cat.label}
        </button>
      ))}
    </div>
  </div>
</section>
