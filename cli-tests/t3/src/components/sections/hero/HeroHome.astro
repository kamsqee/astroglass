---
/**
 * Hero Home — Premium Astro Template Landing
 * Aurora mesh gradient + code snippet preview + tech stack badges
 */
import { getLocaleFromUrl, useTranslations } from '../../../utils/i18n';
import LocalizedLink from '../../ui/LocalizedLink.astro';
import '../../../styles/components/hero/HeroAurora.css';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
---

<section class="hero-aurora" id="hero-home-section">
  <!-- Mesh gradient background (mouse-reactive) -->
  <div class="hero-aurora-bg" id="hero-home-bg">
    <div class="hero-aurora-mesh"></div>
    <div class="hero-aurora-mesh hero-aurora-mesh--2"></div>
    <div class="hero-aurora-mesh hero-aurora-mesh--3"></div>
  </div>

  <!-- Grid overlay -->
  <div class="hero-aurora-grid"></div>

  <!-- Aurora band -->
  <div class="hero-aurora-band"></div>

  <!-- Content -->
  <div class="hero-aurora-content" style="max-width: 900px;">
    <!-- Badge -->
    <div class="hero-aurora-badge">
      <span class="hero-aurora-badge-dot"></span>
      <span>{t('hero.liveBadge')}</span>
    </div>

    <!-- Headline — per-word gradient reveal -->
    <h1 class="hero-aurora-title" style="font-size: clamp(2.2rem, 6.5vw, 4.5rem);">
      {t('hero.title').split(' ').map((word: string, i: number) => (
        <span class="hero-aurora-word" style={`animation-delay: ${0.1 + i * 0.08}s`}>{word}&nbsp;</span>
      ))}
    </h1>

    <!-- Subtitle -->
    <p class="hero-aurora-subtitle" style="max-width: 640px;">
      {t('hero.subtitle')}
    </p>

    <!-- Code Snippet Preview -->
    <div class="hero-home-code-block">
      <div class="hero-home-code-header">
        <div class="hero-home-code-dots">
          <span class="hero-home-code-dot hero-home-code-dot--red"></span>
          <span class="hero-home-code-dot hero-home-code-dot--yellow"></span>
          <span class="hero-home-code-dot hero-home-code-dot--green"></span>
        </div>
        <span class="hero-home-code-tab">{t('hero.terminal.label')}</span>
      </div>
      <div class="hero-home-code-body">
        <code>
          <span class="hero-home-code-prompt">$</span>
          <span class="hero-home-code-cmd">{t('hero.cloneCommand')}</span>
          <span class="hero-home-code-cursor"></span>
        </code>
      </div>
    </div>

    <!-- CTAs -->
    <div class="hero-aurora-ctas">
      <a href="#themes" class="hero-aurora-btn hero-aurora-btn--primary">
        <span class="hero-aurora-btn-glow"></span>
        <span class="hero-aurora-btn-text">{t('hero.cta')}</span>
      </a>
      <LocalizedLink href="/docs" class="hero-aurora-btn hero-aurora-btn--secondary">
        <span class="hero-aurora-btn-text">{t('hero.secondaryCta')}</span>
        <svg class="hero-aurora-btn-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </LocalizedLink>
    </div>

    <!-- Trust strip — Tech stack -->
    <div class="hero-aurora-trust">
      <span class="hero-aurora-trust-label">{t('hero.trustedBy')}</span>
      <div class="hero-aurora-trust-logos">
        <span class="hero-aurora-trust-pill">Astro 5.0</span>
        <span class="hero-aurora-trust-pill">Tailwind 4</span>
        <span class="hero-aurora-trust-pill">DaisyUI</span>
        <span class="hero-aurora-trust-pill">TypeScript</span>
        <span class="hero-aurora-trust-pill">MDX</span>
        <span class="hero-aurora-trust-pill">Cloudflare</span>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <a href="#stats" class="hero-aurora-scroll cursor-pointer hover:text-accent transition-colors duration-300 group">
    <div class="hero-aurora-scroll-ring">
      <svg viewBox="0 0 40 40">
        <circle cx="20" cy="20" r="18" class="hero-aurora-ring-track"/>
        <circle cx="20" cy="20" r="18" class="hero-aurora-ring-glow"/>
      </svg>
      <svg class="hero-aurora-scroll-chevron group-hover:text-accent transition-colors duration-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M7 10l5 5 5-5"/>
      </svg>
    </div>
    <span class="hero-aurora-scroll-text group-hover:text-accent transition-colors duration-300">{t('hero.scrollToExplore')}</span>
  </a>
</section>

<style>
  /* Code Snippet Preview */
  .hero-home-code-block {
    width: 100%;
    max-width: 580px;
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid hsl(var(--bc) / 0.08);
    background: hsl(var(--bc) / 0.03);
    backdrop-filter: blur(20px);
    animation: aurora-slide-up 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s both;
    box-shadow: 0 8px 32px hsl(var(--bc) / 0.06);
  }

  .hero-home-code-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border-bottom: 1px solid hsl(var(--bc) / 0.06);
    background: hsl(var(--bc) / 0.02);
  }

  .hero-home-code-dots {
    display: flex;
    gap: 6px;
  }

  .hero-home-code-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .hero-home-code-dot--red { background: #ff5f57; }
  .hero-home-code-dot--yellow { background: #ffbd2e; }
  .hero-home-code-dot--green { background: #28ca42; }

  .hero-home-code-tab {
    font-size: 0.7rem;
    font-weight: 600;
    color: hsl(var(--bc) / 0.4);
    letter-spacing: 0.02em;
  }

  .hero-home-code-body {
    padding: 16px 20px;
    font-family: 'SF Mono', 'Fira Code', 'JetBrains Mono', monospace;
    font-size: 0.78rem;
    line-height: 1.6;
    overflow-x: auto;
  }

  .hero-home-code-prompt {
    color: hsl(var(--a));
    font-weight: 700;
    margin-right: 8px;
  }

  .hero-home-code-cmd {
    color: hsl(var(--bc) / 0.7);
  }

  .hero-home-code-cursor {
    display: inline-block;
    width: 8px;
    height: 16px;
    background: hsl(var(--a));
    margin-left: 4px;
    vertical-align: text-bottom;
    animation: cursor-blink 1s step-end infinite;
  }

  @keyframes cursor-blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  @media (max-width: 640px) {
    .hero-home-code-block {
      border-radius: 12px;
    }
    .hero-home-code-body {
      font-size: 0.65rem;
      padding: 12px 14px;
    }
  }
</style>

<script>
  function initHeroHomeParallax() {
    const section = document.getElementById('hero-home-section');
    const bg = document.getElementById('hero-home-bg');
    if (!section || !bg) return;

    let rafId: number | null = null;
    let targetX = 0.5;
    let targetY = 0.5;
    let currentX = 0.5;
    let currentY = 0.5;

    const onMove = (e: MouseEvent) => {
      const rect = section.getBoundingClientRect();
      targetX = (e.clientX - rect.left) / rect.width;
      targetY = (e.clientY - rect.top) / rect.height;
    };

    const animate = () => {
      currentX += (targetX - currentX) * 0.04;
      currentY += (targetY - currentY) * 0.04;
      bg.style.setProperty('--mx', `${(currentX - 0.5) * 40}px`);
      bg.style.setProperty('--my', `${(currentY - 0.5) * 40}px`);
      rafId = requestAnimationFrame(animate);
    };

    section.addEventListener('mousemove', onMove, { passive: true });
    rafId = requestAnimationFrame(animate);

    const cleanup = () => {
      section.removeEventListener('mousemove', onMove);
      if (rafId) cancelAnimationFrame(rafId);
    };
    document.addEventListener('astro:before-swap', cleanup, { once: true });
  }

  initHeroHomeParallax();
  document.addEventListener('astro:after-swap', initHeroHomeParallax);
</script>
