---
/**
 * CTA Home â€” Terminal-style call to action
 * Animated terminal showing clone + install + dev commands
 */
import '../../../styles/components/cta/CTAHome.css';
import { getLocaleFromUrl, useTranslations } from '../../../utils/i18n';
import LocalizedLink from '../../ui/LocalizedLink.astro';

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);

const badges = [
  { text: t('landing.cta.freeForever'), icon: 'ğŸ’š' },
  { text: t('landing.cta.mitLicense'), icon: 'ğŸ“„' },
  { text: t('landing.cta.noLock'), icon: 'ğŸ”“' },
];
---

<section id="get-started" class="relative py-20 sm:py-28 md:py-36 px-4 sm:px-6 overflow-hidden">
  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-accent/5 blur-[150px] rounded-full pointer-events-none"></div>

  <div class="max-w-3xl mx-auto relative z-10">
    <!-- Header -->
    <div class="text-center mb-10 sm:mb-14">
      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-accent/20 bg-accent/[0.06] text-base-content/80 text-[10px] font-bold uppercase tracking-[0.3em] mb-4">
        <span class="w-1.5 h-1.5 rounded-full bg-accent animate-pulse"></span>
        {t('landing.cta.eyebrow')}
      </div>
      <h2 class="text-4xl sm:text-5xl md:text-7xl font-black text-base-content tracking-tighter leading-[0.95] mb-4">
        {t('landing.cta.title')}
      </h2>
      <p class="text-base sm:text-lg text-base-content/75 max-w-md mx-auto">
        {t('landing.cta.desc')}
      </p>
    </div>

    <!-- Terminal -->
    <div class="cta-terminal mx-auto">
      <div class="cta-terminal-header">
        <div class="cta-terminal-dots">
          <span class="cta-terminal-dot cta-terminal-dot--red"></span>
          <span class="cta-terminal-dot cta-terminal-dot--yellow"></span>
          <span class="cta-terminal-dot cta-terminal-dot--green"></span>
        </div>
        <span class="cta-terminal-tab">~/projects</span>
        <div class="cta-terminal-status">
          <span class="cta-terminal-status-dot"></span>
          <span class="cta-terminal-status-text">zsh</span>
        </div>
      </div>
      <div class="cta-terminal-body" id="cta-terminal-body">
        <div class="cta-terminal-line cta-terminal-line--1">
          <span class="cta-terminal-comment"># {t('landing.cta.step1')}</span>
        </div>
        <div class="cta-terminal-line cta-terminal-line--2">
          <span class="cta-terminal-prompt">â¯</span>
          <span class="cta-terminal-cmd">{t('landing.cta.step1cmd')}</span>
        </div>
        <div class="cta-terminal-line cta-terminal-line--3">
          <span class="cta-terminal-comment"># {t('landing.cta.step2')}</span>
        </div>
        <div class="cta-terminal-line cta-terminal-line--4">
          <span class="cta-terminal-prompt">â¯</span>
          <span class="cta-terminal-cmd">{t('landing.cta.step2cmd')}</span>
        </div>
        <div class="cta-terminal-line cta-terminal-line--5">
          <span class="cta-terminal-comment"># {t('landing.cta.step3')}</span>
        </div>
        <div class="cta-terminal-line cta-terminal-line--6">
          <span class="cta-terminal-prompt">â¯</span>
          <span class="cta-terminal-cmd">{t('landing.cta.step3cmd')}</span>
        </div>
        <div class="cta-terminal-line cta-terminal-line--7">
          <span class="cta-terminal-success">{t('landing.cta.ready')}</span>
        </div>
      </div>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4 mt-8 sm:mt-10">
      <a href="https://github.com/kamsqee/astroglass" target="_blank" rel="noopener" class="cta-btn cta-btn--primary group">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        <span class="font-bold text-sm">{t('landing.cta.github')}</span>
      </a>
      <LocalizedLink href="/docs" class="cta-btn cta-btn--secondary group">
        <span class="font-bold text-sm">{t('landing.cta.docs')}</span>
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </LocalizedLink>
    </div>

    <!-- Trust badges -->
    <div class="flex items-center justify-center gap-4 sm:gap-6 mt-8">
      {badges.map((badge) => (
        <span class="cta-trust-badge">
          <span>{badge.icon}</span>
          <span>{badge.text}</span>
        </span>
      ))}
    </div>
  </div>
</section>



