---
/**
 * Neo Portfolio â€” Hero Section
 * Editorial hero with floating particles, ambient glow, badge, title, and filters.
 */
interface Props {
  categories: Array<{ id: string; label: string }>;
  badgeLabel: string;
  pageTitle: string;
  pageSubtitle: string;
}

const { categories, badgeLabel, pageTitle, pageSubtitle } = Astro.props;
---

<section class="c-portfolio-page-neo__hero">
  <div class="c-portfolio-page-neo__hero-glow"></div>

  <!-- Floating particles -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="c-portfolio-page-neo__particle c-portfolio-page-neo__particle--1"></div>
    <div class="c-portfolio-page-neo__particle c-portfolio-page-neo__particle--2"></div>
    <div class="c-portfolio-page-neo__particle c-portfolio-page-neo__particle--3 hidden md:block"></div>
  </div>

  <div class="relative z-10 w-full max-w-5xl mx-auto text-center px-4">
    <!-- Badge -->
    <div class="animate-fade-in mb-8">
      <span class="inline-flex items-center gap-4 text-accent font-bold text-[10px] sm:text-[11px] tracking-[0.4em] uppercase">
        <span class="w-8 h-px bg-accent/30"></span>
        {badgeLabel}
        <span class="w-8 h-px bg-accent/30"></span>
      </span>
    </div>

    <!-- Title -->
    <h1 class="text-5xl sm:text-7xl md:text-8xl xl:text-[9rem] font-black tracking-tighter text-base-content mb-6 leading-[0.95]">
      {pageTitle}
    </h1>

    <!-- Decorative line -->
    <div class="c-portfolio-page-neo__line mb-8"></div>

    <!-- Subtitle -->
    <p class="text-lg sm:text-xl text-base-content/75 max-w-2xl mx-auto mb-12 font-light leading-relaxed">
      {pageSubtitle}
    </p>

    <!-- Category Filters -->
    <div class="flex flex-wrap gap-2 justify-center" id="pp-neo-filters">
      {categories.map((cat, i) => (
        <button
          class:list={[
            'px-4 py-2.5 rounded-full text-[10px] font-black uppercase tracking-[0.2em] border transition-all duration-500 cursor-pointer',
            i === 0
              ? 'border-accent/20 text-accent bg-accent/[0.05]'
              : 'border-base-content/8 text-base-content/80 hover:border-accent/20 hover:text-accent hover:bg-accent/[0.05]'
          ]}
          data-filter={cat.id}
        >
          {cat.label}
        </button>
      ))}
    </div>
  </div>
</section>
