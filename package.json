{
  "name": "astroglass",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && pnpm run index:content",
    "index:content": "node scripts/generate-search-index.mjs",
    "check": "astro check",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "wrangler pages dev dist",
    "preview:cloudflare": "wrangler pages dev dist",
    "preview:vercel": "vercel dev",
    "preview:netlify": "netlify dev",
    "deploy": "pnpm run build",
    "deploy:cloudflare": "pnpm run deploy",
    "deploy:vercel": "pnpm run build && vercel deploy",
    "deploy:netlify": "pnpm run build && netlify deploy --prod",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/react": "^4.4.2",
    "@astrojs/rss": "^4.0.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-slot": "^1.2.4",
    "@xyflow/react": "^12.10.0",
    "astro": "^5.16.9",
    "astro-expressive-code": "^0.41.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "framer-motion": "^12.33.0",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^3.7.0",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/cloudflare": "^12.6.12",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.56.1",
    "astro-eslint-parser": "^1.3.0",
    "eslint": "^10.0.1",
    "eslint-plugin-astro": "^1.6.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
