    "src/styles/components/blog/ShareBar.css",
    "src/styles/components/blog/TableOfContents.css"
  ],
  "packages": [
    "@astrojs/mdx"
  ],
  "configPatches": {
    "astro.config.mjs": ["mdx() integration"]
